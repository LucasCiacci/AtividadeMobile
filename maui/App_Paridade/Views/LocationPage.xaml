<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App_Paridade.Views.LocationPage"
             Title="Minha Localização"
             BackgroundColor="{AppThemeBinding Light={StaticResource LightBackgroundColor},
                                               Dark={StaticResource DarkBackgroundColor}}">

    <VerticalStackLayout Padding="20" Spacing="20"
                         VerticalOptions="Center">

        <!-- Latitude -->
        <Label Text="Latitude:"
               FontSize="18"
               FontAttributes="Bold"
               TextColor="{AppThemeBinding Light={StaticResource LightAccentColor},
                                           Dark={StaticResource DarkAccentColor}}" />
        <Label Text="{Binding Latitude}"
               FontSize="16"
               TextColor="{AppThemeBinding Light={StaticResource LightTextColor},
                                           Dark={StaticResource DarkTextColor}}" />

        <!-- Longitude -->
        <Label Text="Longitude:"
               FontSize="18"
               FontAttributes="Bold"
               TextColor="{AppThemeBinding Light={StaticResource LightAccentColor},
                                           Dark={StaticResource DarkAccentColor}}" />
        <Label Text="{Binding Longitude}"
               FontSize="16"
               TextColor="{AppThemeBinding Light={StaticResource LightTextColor},
                                           Dark={StaticResource DarkTextColor}}" />

        <!-- Botão -->
        <Button Text="Obter Localização"
                Command="{Binding GetLocationCommand}"
                VerticalOptions="End"
                BackgroundColor="{AppThemeBinding Light={StaticResource LightPrimaryColor},
                                                  Dark={StaticResource DarkPrimaryColor}}"
                TextColor="{AppThemeBinding Light={StaticResource LightTextColor},
                                         Dark={StaticResource DarkTextColor}}" />
    </VerticalStackLayout>
</ContentPage>
