<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- ☀️ Tema Light -->
    <Color x:Key="LightBackgroundColor">#FFF8E7</Color>
    <Color x:Key="LightCardColor">#F3E5D0</Color>
    <Color x:Key="LightPrimaryColor">#FFD9B3</Color>
    <Color x:Key="LightAccentColor">#8B5E2E</Color>
    <Color x:Key="LightTextColor">#000000</Color>
    <Color x:Key="LightTextSecondaryColor">#5A4633</Color>
    <Color x:Key="LightSubtleTextColor">#9E9E9E</Color>

    <!-- 🌙 Tema Dark -->
    <Color x:Key="DarkBackgroundColor">#2B1A0A</Color>
    <Color x:Key="DarkCardColor">#4E3B2E</Color>
    <Color x:Key="DarkPrimaryColor">#E6A96D</Color>
    <Color x:Key="DarkAccentColor">#E6A96D</Color>
    <Color x:Key="DarkTextColor">#FFFFFF</Color>
    <Color x:Key="DarkTextSecondaryColor">#D1C7C0</Color>
    <Color x:Key="DarkSubtleTextColor">#B0B0B0</Color>

</ResourceDictionary>
